.joinsus-container {
  background-color: #ffda44;
  opacity: 0.8;
  position: relative;
}
.joinsus-container .background {
  position: relative;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 100vh;
  overflow: hidden;
}
.joinsus-container .background:before,
.joinsus-container .background:after {
  content: "";
  position: absolute;
  left: 50%;
  min-width: 1500rpx;
  min-height: 1500rpx;
  background: #fff;
  -webkit-animation-iteration-count: infinite;
          animation-iteration-count: infinite;
  -webkit-animation-timing-function: linear;
          animation-timing-function: linear;
}
.joinsus-container .background:before {
  top: 220rpx;
  -webkit-animation-name: rotate2;
          animation-name: rotate2;
  -webkit-border-radius: 44%;
          border-radius: 44%;
  opacity: 1;
  -webkit-animation-duration: 10s;
          animation-duration: 10s;
}
.joinsus-container .background:after {
  top: 180rpx;
  -webkit-border-radius: 44%;
          border-radius: 44%;
  opacity: 0.8;
  -webkit-animation-name: rotate1;
          animation-name: rotate1;
  -webkit-animation-duration: 10s;
          animation-duration: 10s;
}
.joinsus-container .background .title {
  width: 750rpx;
  margin-top: 50rpx;
  letter-spacing: 10rpx;
  font-size: 40rpx;
  font-weight: 300;
  text-align: center;
}
.joinsus-container .center {
  position: absolute;
  top: 300rpx;
  padding: 0 100rpx 100rpx 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}
.joinsus-container .center .top {
  font-size: 26rpx;
  text-indent: 2em;
  line-height: 40rpx;
}
.joinsus-container .center .ps {
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.joinsus-container .center .input {
  margin: 20rpx 0 20rpx 0;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  border: 1px solid #000;
  padding: 5rpx 10rpx;
  height: 50rpx;
}
.joinsus-container .center .submit {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 20rpx;
}
@-webkit-keyframes rotate1 {
0% {
    -webkit-transform: translate(-50%, 1%) rotateZ(0deg);
            transform: translate(-50%, 1%) rotateZ(0deg);
}
50% {
    -webkit-transform: translate(-50%, -2%) rotateZ(180deg);
            transform: translate(-50%, -2%) rotateZ(180deg);
}
100% {
    -webkit-transform: translate(-50%, 1%) rotateZ(360deg);
            transform: translate(-50%, 1%) rotateZ(360deg);
}
}
